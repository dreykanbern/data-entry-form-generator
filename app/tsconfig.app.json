{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "shims-vue.d.ts",
    "src/**/*",
    "src/**/**/*",
    "src/**/**/**/*",
    "src/**/*.vue",
    "src/**/**/*.vue",
    "src/**/**/**/*.vue",
    "src/**/*.json",
    "src/**/*.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
